    <select id="selectUitools" parameterType="bigdata.uitools.dto.UitoolsDTO" resultType="map">
        SELECT id, titile, db_name, db_type, file_path, mode_path, table_name, createtime, pid
        FROM uitools_page
        <where>

            <if test = "uitools.startDate !=null and uitools.startDate !=''">
                createtime >= str_to_date(#{uitools.startDate}, '%Y-%m-%d %H:%i:%s')
            </if>
            <if test = "uitools.endDate !=null and uitools.endDate !=''">
                AND str_to_date(#{uitools.endDate}, '%Y-%m-%d %H:%i:%s') >= createtime
            </if>

        </where>
    </select>

    <delete id="deleteUitools" parameterType="int">

        DELETE FROM uitools_page WHERE id in
        <foreach item="idList" collection="array" open="(" separator="," close=")">
            #{idList}
        </foreach>

    </delete>

</mapper>