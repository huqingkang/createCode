<mapper namespace="bigdata.uitools.dao.UitoolsMapper">
    <resultMap id="BaseResultMap" type="bigdata.uitools.dto.UitoolsDTO">
        <id column="id" property="id"/>
        <result column="titile" property="titile" jdbcType="VARCHAR"/>
        <result column="db_name" property="dbName" jdbcType="VARCHAR"/>
        <result column="db_type" property="dbType" jdbcType="VARCHAR"/>
        <result column="file_path" property="filePath" jdbcType="VARCHAR"/>
        <result column="mode_path" property="modePath" jdbcType="VARCHAR"/>
        <result column="table_name" property="tableName" jdbcType="VARCHAR"/>
        <result column="createtime" property="createtime" jdbcType="VARCHAR"/>
        <result column="pid" property="pid" jdbcType="VARCHAR"/>

    </resultMap>
